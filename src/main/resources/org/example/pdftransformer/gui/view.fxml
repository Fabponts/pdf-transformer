                    </HBox>
                </HBox>
            </VBox>
        </center>

        <!-- RIGHT -->
        <right>
            <VBox spacing="15" styleClass="right-panel">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Convert To:" styleClass="side-title"/>

                <RadioButton text="DOCX"/>
                <RadioButton text="JPG"/>
                <RadioButton text="PNG"/>
            </VBox>
        </right>

        <!-- BOTTOM -->
        <bottom>
            <VBox spacing="12" alignment="CENTER" styleClass="bottom-area">
                <padding>
                    <Insets top="10" right="20" bottom="20" left="20"/>
                </padding>

                <Button text="CONVERT" styleClass="convert-btn"/>
                <ProgressBar prefWidth="300"/>
            </VBox>
        </bottom>

    </BorderPane>

</AnchorPane>
